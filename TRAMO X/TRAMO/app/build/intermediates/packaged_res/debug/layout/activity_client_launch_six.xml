<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whiteBackground"
    android:layout_height="match_parent"
    tools:context=".clientLauncher.fragmentsClients.realizarPedido.ActivityClientLaunchSix">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarGoActivityClientLaunchSix"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:title="@string/solicitud_de_servicio"
            app:titleTextColor="@color/black"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="1dp" />


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbarGoActivityClientLaunchSix">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descripcionCarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/agrega_descripcion_de_ubicacion"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_edit_text"
                    android:textSize="20sp"
                    app:boxBackgroundColor="#00FF0000"
                    app:boxStrokeColor="#00FF0000"
                    app:boxStrokeWidth="0dp"
                    app:endIconTint="#131313"
                    app:hintTextColor="#101010"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.189"
                    app:startIconTint="#323232">
                    <Spinner
                        android:id="@+id/spinnerSolicitudServicio"
                        android:layout_width="match_parent"
                        android:layout_height="58dp" />
                </com.google.android.material.textfield.TextInputLayout>





                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:hint="@string/producto_a_transportar"
                        app:placeholderText="@string/ingrese_producto_transportar"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:text="mango" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:hint="@string/presentacion_carga"
                        app:placeholderText="@string/ingrese_tipo_empaquetado"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTipoEmpaquetado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:text="Cajas" />

                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_edit_text"
                    android:textSize="20sp"
                    app:boxBackgroundColor="#00FF0000"
                    app:boxStrokeColor="#00FF0000"
                    app:boxStrokeWidth="0dp"
                    app:endIconTint="#131313"
                    app:hintTextColor="#101010"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.189"
                    app:startIconTint="#323232">
                    <Spinner
                        android:id="@+id/spinnerSolicitudServicio2"
                        android:layout_width="match_parent"
                        android:layout_height="58dp" />
                </com.google.android.material.textfield.TextInputLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:hint="@string/cantidad_de_carga"
                        app:placeholderText="@string/ingrese_cantidad_carga"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCantidadCarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:text="1000" />

                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_edit_text"
                    android:textSize="20sp"
                    app:boxBackgroundColor="#00FF0000"
                    app:boxStrokeColor="#00FF0000"
                    app:boxStrokeWidth="0dp"
                    app:endIconTint="#131313"
                    app:hintTextColor="#101010"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.189"
                    app:startIconTint="#323232">
                    <Spinner
                        android:id="@+id/spinnerSolicitudServicio3"
                        android:layout_width="match_parent"
                        android:layout_height="58dp" />
                </com.google.android.material.textfield.TextInputLayout>




                <ImageView
                    android:id="@+id/imageCargar"
                    android:src="@drawable/user"
                    android:layout_gravity="center"
                    android:background="#BDBBBB"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/fotoPerfil" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subir_foto_carga"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="@color/naranja"/>


            </LinearLayout>
        </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agregar_otro_producto"
        android:textColor="@color/black"
        android:visibility="gone"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnSolicitudClientSix"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/secondaryWeb"
        android:text="@string/CONTINUAR"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
