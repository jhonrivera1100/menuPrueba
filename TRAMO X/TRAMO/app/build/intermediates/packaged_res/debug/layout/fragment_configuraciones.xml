<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground"
    tools:context=".clientLauncher.fragmentsClients.configuraciones.ConfiguracionesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/IrAcercaApp"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:drawableEnd="@drawable/circle"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:backgroundTint="@color/whiteBackground"
            android:text="@string/Acerca_de_la_aplicacion" />

        <Button
            android:id="@+id/termsAndConditions"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:drawableEnd="@drawable/circle"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/whiteBackground"
            android:layout_margin="5dp"
            android:text="@string/terminos_y_condiciones" />
    </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/footer"
        android:translationZ="-10dp"
        app:layout_constraintTop_toTopOf="@+id/footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>