<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TRAMO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#161627</item>
        <item name="colorPrimaryVariant">#A3161627</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#161627</item>
        <item name="colorSecondaryVariant">#FFFFFF</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#161627</item>

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/primaryWeb</item>
        <item name="titleTextColor">#000000</item>
    </style>


    <style name="ToolbarThemePrimary" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">#000000</item>
    </style>
    <style name="ToolbarThemeSecondary" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="titleTextColor">#FFFFFF</item> <!-- Puedes ajustar el color del texto segÃºn tus necesidades -->
    </style>
    <style name="Theme.TRAMO.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TRAMO.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TRAMO.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="MenuItemStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>




</resources>
